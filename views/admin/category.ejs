<%- include('../layouts/adminHeader.ejs') %>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Categories </h2>
                <p>Add, edit or delete a category</p>
            </div>
            <div>
                <input type="text" placeholder="Search Categories" class="form-control bg-white">
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <form action="/admin/add-category" method="post" onsubmit="return validateForm()"
                            enctype="multipart/form-data">
                            <div class="mb-4">
                                <label for="product_name" class="form-label">Category</label>
                                <input type="text" name="catname" placeholder="Type here" class="form-control"
                                    id="catname" />
                                <div class="error-message" id="catname-error"></div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Description</label>
                                <textarea id="description" name="description" placeholder="Type here"
                                    class="form-control"></textarea>
                                <div class="error-message" id="description-error"></div>
                            </div>
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4>Media</h4>
                                </div>
                                <div class="card-body">
                                    <div class="input-upload">
                                        <img src="/admin-assets/imgs/theme/upload.svg" alt="">
                                        <input class="form-control" type="file" name="image" single>
                                    </div>
                                </div>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Create category</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-9">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <!-- <th class="text-center">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" />
                                                </div>
                                            </th> -->
                                        <th>Category</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th class="text-end">Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <% if(categories.length> 0) {
                                        for(let i = 0; i<categories.length; i++) { %>
                                            <tr>
                                                <!-- <td class="text-center">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" />
                                                </div>
                                            </td> -->
                                                <td><b>
                                                        <%= categories[i].catname %>
                                                    </b></td>
                                                <td>
                                                    <%= categories[i].description %>
                                                </td>
                                                <td>
                                                    <span>
                                                        <% if(categories[i].status===0) { %>
                                                            <span class="user-status"
                                                                style="color: green;">Active</span>
                                                            <% } else { %>
                                                                <span style="color: red;">Inactive</span>
                                                                <% } %>
                                                    </span>
                        </div>
                        </td>
                        <td class="text-end">
                            <div class="dropdown">
                                <a href="#" data-bs-toggle="dropdown" class="btn btn-light rounded btn-sm font-sm"> <i
                                        class="material-icons md-more_horiz"></i> </a>
                                <div class="dropdown-menu">
                                    <button style="background-color: #007bff; color: #fff;"
                                        class="btn btn-sm font-sm rounded btn-brand"
                                        onclick="window.location.href='/admin/edit-category/<%= categories[i]._id %>'">
                                        <i class="material-icons md-edit"></i> Edit
                                    </button>

                                    <button style="background-color: #dc3545; color: #fff;"
                                        class="btn btn-sm font-sm btn-light rounded"
                                        onclick="window.location.href='/admin/enableCategory/<%= categories[i]._id %>'">
                                        <i class="material-icons md-delete_forever"></i> Enable
                                    </button>

                                    <button style="background-color: #dc3545; color: #fff;"
                                        class="btn btn-sm font-sm btn-light rounded"
                                        onclick="window.location.href='/admin/disableCategory/<%= categories[i]._id %>'">
                                        <i class="material-icons md-delete_forever"></i> Disable
                                    </button>

                                    <!-- <button style="background-color: #dc3545; color: #fff;" class="btn btn-sm font-sm btn-light rounded" onclick="window.location.href='/admin/delete-category/<%= categories[i]._id %>'">
                                                            <i class="material-icons md-delete_forever"></i> Delete
                                                        </button> -->
                                </div>
                            </div> <!-- dropdown //end -->
                        </td>
                        </tr>
                        <% } }else { %>
                            <tr>
                                <td colspan="6">categories Not Found</td>
                            </tr>
                            <% } %>
                                </tbody>
                                </table>
                    </div>
                </div> <!-- .col// -->
            </div> <!-- .row // -->
        </div> <!-- card body .// -->
        </div> <!-- card .// -->
        <div class="pagination-area mt-30 mb-50">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-start">
                    <li class="page-item active"><a class="page-link" href="#">01</a></li>
                    <li class="page-item"><a class="page-link" href="#">02</a></li>
                    <li class="page-item"><a class="page-link" href="#">03</a></li>
                    <li class="page-item"><a class="page-link dot" href="#">...</a></li>
                    <li class="page-item"><a class="page-link" href="#">16</a></li>
                    <li class="page-item"><a class="page-link" href="#"><i
                                class="material-icons md-chevron_right"></i></a></li>
                </ul>
            </nav>
        </div>
    </section> <!-- content-main end// -->

    </main>
    <script>
            function validateForm() {
            var catname = document.getElementById('catname').value.trim();
            var description = document.getElementById('description').value.trim();
            var isValid = true;

            // Validate catname
            var catnamePattern = /^[a-zA-Z]+$/;
            if (catname === '') {
                document.getElementById('catname-error').innerText = 'Category name is required';
                isValid = false;
            } else if (!catnamePattern.test(catname)) {
                document.getElementById('catname-error').innerText = 'Category name can only contain alphabets';
                isValid = false;
            } else {
                document.getElementById('description-error').innerText = '';
            }
            // else {
            //     // Check if category name is unique
