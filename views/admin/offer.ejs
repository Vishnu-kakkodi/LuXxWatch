<%- include('../layouts/adminHeader.ejs') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Product offer management</h2>
                </div>
            </div>
            <div class="card-body">
                <% if(products.length > 0) { %>
                    <ul class="list-group">
                        <% for(let i = 0; i < products.length; i++) { %>
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <img style="width: 50px; height: 50px;" src="/productImages/<%= products[i].image[0] %>" class="img-sm img-thumbnail" alt="Item">
                                    </div>
                                    <div class="col-sm-9">
                                        <div class="info-wrap">
                                            <a href="#" class="title text-truncate"><%= products[i].brandname %></a>
                                            <a href="#" class="title text-truncate"><%= products[i].productname %></a>
                                            <div class="input-group">
                                                <input required="" class="form-control square" style="height: 25px; ; margin-top: 10px; margin-bottom: 8px; margin-right: 8px;" name="price" value="<%= products[i].price %>" id="price_<%= i %>" disabled>
                                                <input required="" class="form-control square" style="height: 25px; margin-top: 10px; margin-bottom: 8px; margin-right: 8px;" name="offprice" value="<%= products[i].productOffer %>" id="offprice_<%= i %>">
                                                <button style="background-color: #007bff; color: #fff;" class="btn btn-sm font-sm rounded btn-brand" onclick="productOffer('<%= products[i]._id %>','<%= i %>')">
                                                    <i class="material-icons md-edit"></i> Apply
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        <% } %>
                    </ul>
                <% } else { %>
                    <div class="alert alert-warning" role="alert">Products Not Found</div>
                <% } %>
            </div> 
            
            
            <!--pagination-->
            <div class="pagination-area mt-15 mb-sm-5 mb-lg-0">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <% for(let i=1; i<=totalPages; i++){ %>
                        <li class="page-item active">
                            <a class="page-link" href="?page=<%= i %>">
                                <%= i %>
                            </a>
                        </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </section> <!-- content-main end// -->
       
    </main>

    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        async function productOffer(productId,index){
            const offprice = document.getElementById('offprice_' + index).value;
            const response = await fetch(`/admin/offerModule/${productId}`,{
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({offprice})

            });
            const data = await response.json();

            if(data.success){
                console.log(data.success);
                swal({
                            title: "Success",
                            text: data.success,
                            icon: "success",
                            buttons: {
                                confirm: {
                                    text: "Ok",
                                    value: true,
                                    visible: true,
                                    className: "btn btn-primary"
                                }
                            }
                        })
            }else{
                console.log(data.error);
            }
        }
    </script>


    <script src="/admin-admin-assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/admin-admin-assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/admin-admin-assets/js/vendors/select2.min.js"></script>
    <script src="/admin-admin-assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="/admin-admin-assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/admin-admin-assets/js/main.js" type="text/javascript"></script>
</body>

</html>