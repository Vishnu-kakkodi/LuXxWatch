    <script>
        let sortUrl;
        function handlePriceSort(select) {
    const selectedValue = select.value;
    switch (selectedValue) {
        case "asc":
            sortUrl = "/sortPriceLH?sort=asc";
            break;
        case "desc":
            sortUrl = "/sortPriceHL?sort=desc";
            break;
        case "az":
            sortUrl = "/sortAZ?sort=AZ";
            break;
        case "za":
            sortUrl = "/sortZA?sort=ZA";
            break;
            case "NA":
            sortUrl = "/sortNA?sort=NA";
            break;
        default:
            sortUrl = "/sortPriceLH?sort=asc";
    }
    window.location.href = sortUrl;
}

document.addEventListener("DOMContentLoaded", function () {
    const brandCheckboxes = document.querySelectorAll('.brand-checkbox');
    const filterBtn = document.querySelector('.btn-default');

    filterBtn.addEventListener('click', function (event) {
        event.preventDefault();
        let queryParams = '';
        brandCheckboxes.forEach(function (checkbox) {
            if (checkbox.checked) {
                if (queryParams === '') {
                    queryParams += `?brand=${checkbox.value}`;
                } else {
                    queryParams += `&brand=${checkbox.value}`;
                }
            }
        });

        window.location.href = `/shop${queryParams}`;
    });
    
    const sortSelect = document.querySelector('#sort-select');
    if (sortSelect) {
        sortSelect.addEventListener('change', function () {
            const sortValue = sortSelect.value;
            const currentUrl = new URL(window.location.href);
            currentUrl.searchParams.set('sort', sortValue);
            window.location.href = currentUrl.toString();
        });
    }
});



    </script>

<script>
    const buttons = document.querySelectorAll('#button-add-to-cart');

    buttons.forEach(button => {
        button.addEventListener('click', async () => {
            try {
                const productId = button.dataset.productId;
                const res = await fetch(`/add-cart/${productId}`, {
                    method: 'GET'
                });

                const data = await res.json();

                if (res.ok) {
                    console.log("data");
                    swal({
                        title: "Success",
                        text: data.success,
                        icon: "success",
                        buttons: {
                            confirm: {
                                text: "Go to Cart",
                                value: true,
                                visible: true,
                                className: "btn btn-primary"
                            },
                            cancel: {
                                text: "Close",
                                value: null,
                                visible: true,
                                className: "btn btn-secondary"
                            }
                        }
                    }).then((value) => {
                        if (value) {
                            window.location.href = "/cart";
                        }
                    });

                } else {
                    swal("Ooops", data.error, "error");
                }

            } catch (error) {
                console.log(error);
            }
        });
    });
</script>


